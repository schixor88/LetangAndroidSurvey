<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--2.1-->
    <RelativeLayout

        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:padding="3dp"
                android:textSize="22sp"
                android:textColor="@color/colorBlackText"
                android:text="@string/suchanadata_bibaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View

                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>


            <EditText
                android:id="@+id/d2_et_informer_name"
                android:padding="15dp"
                android:textColorHint="@color/colorBlackText"
                android:hint="@string/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:padding="15dp"
                android:id="@+id/d2_rg_informer_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linga"
                    android:textColor="@color/colorBlackText"
                    android:textSize="18sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/purus"
                    android:textSize="@dimen/radio_fontSize" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/mahila"
                    android:textSize="@dimen/radio_fontSize" />

            </RadioGroup>

            <EditText
                android:id="@+id/d2_et_informer_age"
                android:padding="15dp"
                android:textColorHint="@color/colorBlackText"
                android:hint="@string/umers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/d2_et_informer_email"
                android:padding="15dp"
                android:textColorHint="@color/colorBlackText"
                android:hint="@string/dhuri_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
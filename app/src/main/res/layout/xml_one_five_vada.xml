<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--1.5-->
    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="3dp"
                android:textSize="20sp"
                android:textColor="@color/colorBlackText"
                android:text="@string/vada_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View

                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>


            <EditText
                android:id="@+id/d2_et_tenant_family_count"
                android:padding="15dp"
                android:textColorHint="@color/colorBlackText"
                android:hint="@string/vada_population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <LinearLayout
            android:padding="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="3dp"
                android:textSize="20sp"
                android:textColor="@color/colorBlackText"
                android:text="@string/ghar_uudhyam_byabasaye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View

                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:textColor="#000000"
                   android:padding="10dp"
                   android:textSize="18dp"
                   android:text="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:id="@+id/d2_et_first_home_business"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />


           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/d2_et_second_home_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/d2_et_third_home_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>
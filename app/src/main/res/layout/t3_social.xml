            android:textSize="@dimen/radio_fontSize" />

        <CheckBox
            android:id="@+id/t3_train_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/o21"
            android:textSize="@dimen/radio_fontSize" />

        <CheckBox
            android:id="@+id/t3_train_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/o22"
            android:textSize="@dimen/radio_fontSize" />

        <CheckBox
            android:id="@+id/t3_train_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/o23"
            android:textSize="@dimen/radio_fontSize" />

        <CheckBox
            android:id="@+id/t3_train_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/o24"
            android:textSize="@dimen/radio_fontSize" />

    </LinearLayout>

    <include layout="@layout/separator" />

</LinearLayout>
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="हिँडेर"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="सार्वजनिक"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="निजी"
            android:textSize="@dimen/radio_fontSize" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="जाने स्थान"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/content_fontSize" />

    <RadioGroup
        android:id="@+id/t3_rg_transport_other_where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="नगरपालिका भित्र"
            android:textSize="@dimen/radio_fontSize" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="नगरपालिका बाहिर"
            android:textSize="@dimen/radio_fontSize" />

    </RadioGroup>

    <include layout="@layout/separator" />

</LinearLayout>